<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.landfathich.customviews.BottomButtonsView
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:bottomNegativeBackgroundColor="#DDB8B8"
        app:bottomNegativeButtonText="@string/cancel"
        app:bottomNegativeTextColor="#240885"
        app:bottomPositiveBackgroundColor="#309782"
        app:bottomPositiveButtonText="@string/ok"
        app:bottomPositiveTextColor="#240885"
        app:bottomProgressMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>